<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" >

        <!-- checkbox -->
        <ImageView
            android:id="@+id/check_box_c"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="fitStart"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/checkbox_checked" />

        <!-- 任务名称 -->
        <TextView
            android:id="@+id/task_name_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/check_box_c"
            android:layout_marginLeft="4dp"
            android:textColor="#3b3b3b"
            android:textSize="15sp" />

        <!-- 负责人 -->
        <ImageView
            android:id="@+id/portrait_c"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/check_box_c"
            android:layout_marginTop="3dp"
            android:src="@drawable/animal1"
            android:scaleType="fitStart"
            android:layout_toRightOf="@+id/check_box_c" />

        <TextView
            android:id="@+id/responsor_c"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_box_c"
            android:layout_toRightOf="@id/portrait_c"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:textColor="#787878"
            android:textSize="11sp" />

        <!-- 时间 -->
        <ImageView
            android:id="@+id/time_bg_c"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/check_box_c"
            android:layout_toRightOf="@id/responsor_c"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitStart"
            android:src="@drawable/clock_time"
            android:layout_alignBottom="@+id/task_time_c" />

        <TextView
            android:id="@+id/task_time_c"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_box_c"
            android:layout_toRightOf="@id/time_bg_c"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#787878"
            android:textSize="11sp" />

        <!-- 项目归属 -->
        <ImageView
            android:id="@+id/proj_be_bg_c"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/check_box_c"
            android:layout_toRightOf="@id/task_time_c"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitStart"
            android:src="@drawable/project_belong_bg"
            android:layout_alignBottom="@+id/task_time_c" />

        <TextView
            android:id="@+id/proj_belong_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_box_c"
            android:layout_toRightOf="@id/proj_be_bg_c"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#787878"
            android:textSize="11sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3" />

</LinearLayout>