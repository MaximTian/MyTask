<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/dynamic_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/animal1" />

        <RelativeLayout
            android:layout_toRightOf="@id/dynamic_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/dynamic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maxim"
                android:textSize="14sp"
                android:textColor="#707070"/>

            <TextView
                android:id="@+id/dynamic_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dynamic_name"
                android:layout_marginLeft="5dp"
                android:text="完成了任务"
                android:textSize="14sp"
                android:textColor="#707070"/>

            <TextView
                android:id="@+id/dynamic_aim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dynamic_name"
                android:layout_marginTop="5dp"
                android:text="洗澡"
                android:textSize="17sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/dynamic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="04-05 12:54"
            android:textColor="@color/text_grey"
            android:layout_marginRight="13dp" />
    </RelativeLayout>

</LinearLayout>